<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".halamanDetailORICONA15SV">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:layout_marginTop="70dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="Back button"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Detail Product"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

    <!-- Product Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/orico"
        android:scaleType="centerInside"
        android:layout_marginBottom="8dp"
        />

    <!-- Product Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORICO-NA15-SV"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"/>

    <!-- Product Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORICO NA15-SV adalah cooling pad laptop yang dirancang untuk meningkatkan kenyamanan dan kinerja laptop Anda. Dibuat dari bahan aluminium berkualitas tinggi, cooling pad ini tidak hanya memberikan tampilan elegan tetapi juga memastikan distribusi panas yang efisien. Dilengkapi dengan dua kipas berukuran 80 x 80 x 10 mm yang berputar pada kecepatan 2000 Â±10% RPM, ORICO NA15-SV mampu menghasilkan aliran udara yang optimal untuk mendinginkan komponen internal laptop Anda. Dengan tingkat kebisingan hanya 21dB, cooling pad ini beroperasi dengan tenang, memungkinkan Anda bekerja atau bermain game tanpa gangguan."
        android:textColor="#666666"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />


</LinearLayout>